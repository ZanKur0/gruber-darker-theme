{
    /*
        Credits to
            Alexey Kutepov <reximkut@gmail.com> 
            URL: http://github.com/rexim/gruber-darker-theme

            Zankuro (Me)
            For adapting this theme for vsc
        

        Installation guide:
            Copy the contents of this into setting.json
            Install: evgeniypeshkov.syntax-highlighter
            !! Set the color theme to Visual Studio Dark !!

    */
    "editor.mouseWheelZoom": true,
    /*
      (gruber-darker-fg        "#e4e4ef")
      (gruber-darker-fg+1      "#f4f4ff")
      (gruber-darker-fg+2      "#f5f5f5")
      (gruber-darker-white     "#ffffff")
      (gruber-darker-black     "#000000")
      (gruber-darker-bg-1      "#101010")
      (gruber-darker-bg        "#181818")
      (gruber-darker-bg+1      "#282828")
      (gruber-darker-bg+2      "#453d41")
      (gruber-darker-bg+3      "#484848")
      (gruber-darker-bg+4      "#52494e")
      (gruber-darker-red-1     "#c73c3f")
      (gruber-darker-red       "#f43841")
      (gruber-darker-red+1     "#ff4f58")
      (gruber-darker-green     "#73c936")
      (gruber-darker-yellow    "#ffdd33")
      (gruber-darker-brown     "#cc8c3c")
      (gruber-darker-quartz    "#95a99f")
      (gruber-darker-niagara-2 "#303540")
      (gruber-darker-niagara-1 "#565f73")
      (gruber-darker-niagara   "#96a6c8")
      (gruber-darker-wisteria  "#9e95c7")
    */
    "workbench.colorCustomizations": {
        "[Visual Studio Dark]": {
            "editor.background": "#181818",
            "activityBarBadge.background": "#ffdd33",
            "activityBarBadge.foreground": "#181818",
            //
            "syntax.type": "#95a99f",
            "syntax.scope": "#95a99f",
            "syntax.function": "#96a6c8",
            "syntax.variable": "#ffdd33",
            "syntax.number": "#73c936",
            "syntax.string": "#73c936",
            "syntax.comment": "#73c936",
            "syntax.constant": "#73c936",
            "syntax.directive": "#95a99f",
            "syntax.control": "#ffdd33",
            "syntax.operator": "#9e95c7",
            "syntax.modifier": "#95a99f",
            "syntax.punctuation": "#f4f4ff",
        },
    },
    "workbench.colorTheme": "Visual Studio Dark",
    

    "editor.tokenColorCustomizations": {
        "[Visual Studio Dark]": {

        "textMateRules": [
            {
                "scope": "variable.language.this.cpp",
                "settings": {"foreground": "#95a99f"}
            },
        ]
    }
}

